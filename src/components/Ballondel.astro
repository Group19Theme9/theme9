<div class="everything">
    <section class="fsection">
    <img class="pink" src="public/img/pinkballon.svg" alt="Ballon">
    <img class="blue" src="public/img/blueballon.svg" alt="Ballon">
    <p class="firstp">“Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.” </p>
</section>
<section class="ssection">
    <p class="secondp">“Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.” </p>
    <img class="babypink" src="public/img/babypinkballon.svg" alt="Ballon">
    <img class="green" src="public/img/greenballon.svg" alt="Ballon">
</section>
</div>
<style>

.fsection {
    display: grid;
    grid-template-columns: 0.5fr 0.5fr 2fr;
    grid-template-rows: 1fr 1fr 1fr;
}
.pink {
grid-column: 1;
grid-row: 2 / 4;
}
.blue {
grid-column: 2;
grid-row: 1 / 3;
}
.firstp {
    grid-column: 3 / 4;
    grid-row: 2;
    color: #1A3B8E;
    font-style: italic;
}

.ssection {
    display: grid;
    grid-template-columns: 2fr 0.5fr 0.5fr;
    grid-template-rows: 1fr 1fr 1fr;
}

.secondp {
   grid-column: 1 / 2;
   grid-row: 2 / 3; 
   color: #1A3B8E;
  font-style: italic;
}

.babypink  {
    grid-column: 2 / 3;
    grid-row: 1 / 3;
}

.green {
    grid-column: 3 / 4;
    grid-row: 2 / 4;
}

</style>

<script>
import {
  animate,
  scroll,
} from "motion";

document.querySelectorAll(".pink, .blue, .babypink, .green").forEach((balloon) => {
  scroll(animate(balloon, { y: [-300, 300] }, { ease: "linear" }), {
    target: balloon,
  });
});

</script>