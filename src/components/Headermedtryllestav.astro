---
import header2 from "../../public/img/header2.svg";
import stjerner from "../../public/img/stjerner.svg";
import tryllestav from "../../public/img/tryllestav.svg";
import { Image } from "astro:assets";
---

<div class="header">
  <Image class="tekst" src={header2} alt="tekst" />
  <Image class="stjerner" src={stjerner} alt="stjerner" />
  <Image class="tryllestav" src={tryllestav} alt="tryllestav" />
</div>
<style>
  .header {
    display: grid;
    grid-template-columns: 3fr 0.25fr 0.5fr;
    grid-template-rows: 0.5fr 0.5fr 0.25fr;
    margin-top: 50vh;
    position: relative;
  }
  .tekst {
    grid-column: 1 / 3;
    grid-row: 1 / 3;
    max-width: 100%;
    position: relative;
    z-index: 0;
  }
  .stjerner {
    grid-column: 2 / 4;
    max-width: 100%;
    position: absolute;
    z-index: 2;
    top: 0;
    left: 0;
    animation: fadeInOut 2s ease-in-out infinite;
  }
  .tryllestav {
    grid-column: 3 / 4;
    grid-row: 2 / 3;
    position: relative;
    z-index: 0;
  }
</style>
