import Lottiefile from "../components/lottiefile.astro";
import Infobox from "../components/Infobox.astro";
import SecondPic from "../components/SecondPic.astro";
import Video from "../components/Video.astro";
import Ballondel from "../components/Ballondel.astro";
import Lottifileslut from "../components/Lottifileslut.astro";
import Headermedtryllestav from "../components/Headermedtryllestav.astro";
import Statboks1 from "../components/Statboks1.astro"
import Statboks2 from "../components/Statboks2.astro"
import Statboks3 from "../components/Statboks3.astro"
---

<MainLayout>
  <FirstPicandtext />
  <Donerknap />
  <Lottiefile />
  <SecondPic />
  <Infobox />
  <Ballondel />
  <Video />
  <Headermedtryllestav />
  <Statboks1></Statboks1>
  <Statboks2></Statboks2>
  <Statboks3></Statboks3>
  <Lottifileslut />
</MainLayout>

<script>
  window.addEventListener("scroll", onScroll);

  function onScroll() {
    let winScroll = document.body.scrollTop || document.documentElement.scrollTop;
    let height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
    let scrolled = (winScroll / height) * 100;
    document.getElementById("myBar").style.width = scrolled + "%";
  }
</script>
